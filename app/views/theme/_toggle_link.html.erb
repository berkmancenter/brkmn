<%= link_to toggle_mode_path,
    id: 'toggle-link',
    data: {
      controller: 'theme',
      action: 'theme#toggle',
      'current-mode': viewing_mode,
      'light-image': asset_path('classicmode.svg'),
      'classic-image': asset_path('modernmode.svg'),
    } do %>
  <span>
    <%= image_tag("#{viewing_mode == 'classic' ? 'modern' : 'classic'}mode.svg") %>
  </span>
  <span>
    <%= viewing_mode == 'classic' ? 'Light' : 'Classic' %>
  </span>
<% end %>
