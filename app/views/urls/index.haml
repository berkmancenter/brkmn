.add_form
  %fieldset
    %legend Shorten a URL
    = form_for(Url.new) do |f|
      .messages{:style => 'display: none;'}
      = f.label(:to)
      = f.text_field(:to, :size => 80)
      %br
      = f.label(:from, 'Short URL')
      http://brk.mn/
      = f.text_field(:from, :size => 10)
      = f.submit
.your_urls
  %h2 Your URLs
