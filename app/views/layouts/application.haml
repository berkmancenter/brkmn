!!! 5
%html
  %head
    %meta{:charset => 'utf-8'}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %title= (@page_title.blank?) ? REDIRECT_DOMAIN : @page_title
    = stylesheet_link_tag "application", :media => "all"
    = csrf_meta_tags
    = javascript_include_tag "application"
  %body
    .wrapper
      .header-items
        .header-items-item
          %a{class: 'header-items-item-bookmarklet', :title => "Drag this link to your bookmarks toolbar to shorten any page via #{REDIRECT_DOMAIN}", :href => "javascript:(function(){f='#{bookmarklet_urls_url}?url%5bto%5d='+encodeURIComponent(window.location.href)+'&';a=function(){if(!window.open(f+'noui=1&jump=doclose','brkmn','location=1,links=0,scrollbars=0,toolbar=0,width=1000,height=400'))location.href=f+'jump=yes'};if(/Firefox/.test(navigator.userAgent)){setTimeout(a,0)}else{a()}})()"}
            %span
              = image_tag('bookmark.svg')
            %span
              Shorten on #{REDIRECT_DOMAIN}
        .header-items-item
          - if @current_user
            %span
              = image_tag('user.svg')
            %span
              %span{:class => 'header-items-item-user'}
                = @current_user.username

      %h1.site-title
        %a{:href => root_path, :class => 'header-logo-link'}
          - if File.exist?(Rails.root.join('app', 'assets', 'images', 'logo.png'))
            = image_tag('logo.png', class: 'header-logo-image')
          brk.mn
      - flash.each do |name, msg|
        = content_tag :div, msg, class: "message", :id => "#{name}"
      = yield
      /%div{:id => 'loader'}/
    %footer
      Berkman Center for Internet &amp; Society
